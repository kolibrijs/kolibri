{
  "type": "module",
  "keywords": [
    "kolibry-theme",
    "kolibry"
  ],
  "engines": {
    "node": ">=18.0.0",
    "kolibry": ">=0.0.1"
  },
  "scripts": {
    "build": "kolibry build example.md",
    "dev": "kolibry example.md --open",
    "export": "kolibry export example.md",
    "screenshot": "kolibry export example.md --format png"
  },
  "dependencies": {
    "@kolibry/types": "^0.0.5",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4",
    "theme-lumos": "^0.0.3"
  },
  "devDependencies": {
    "@kolibry/cli": "^0.0.5"
  },
  "//": "Learn more: https://kolibry.dev/themes/write-a-theme.html",
  "kolibry": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Nunito Sans",
        "mono": "Fira Code"
      },
      "hightlighter": "prism"
    }
  }
}
